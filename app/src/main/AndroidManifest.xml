<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hawi.medmarket">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".medvolley.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="android.app.searchable"
            android:resource="@id/searchInv" />

        <activity android:name=".RecycleActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".RegisterActivity"/>
        <activity android:name=".ItemDetailsActivity" />
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ShippingAddressActivity" />
        <activity android:name=".BillActivity" />
        <activity android:name=".ConfirmActivity" />
        <activity android:name=".ThanksPaymentActivity" />
    </application>

</manifest>